<!doctype html>

    #parse("./head/header.vm")
    #parse("./head/sidebar.vm")
    #parse("./head/navbar.vm")

<script src="public/js/createRole.js" type="text/javascript"></script>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div style="width: 100%">
                <div class="card">
                    <div class="content">
                        <form class="form-horizontal" id="insertform">
                            <div class="form-group" style="margin-left: 25%">
                                <label for="roleName" class="col-sm-2 control-label">角色名称</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input type="text" class="form-control" placeholder="请输入角色英文名"/>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <label for="roleCname" class="col-sm-2 control-label">角色中文名称</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input type="text" class="form-control" placeholder="请输入角色中文名"/>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <label for="roleDesc" class="col-sm-2 control-label">角色描述</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <textarea style="resize: none;" class="form-control" placeholder="请输入角色描述"/></textarea>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <label for="roleIsenable" class="col-sm-2 control-label">是否启用</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <label class="radio-inline">
                                        <input type="radio" name="IsenableRadioOptions" id="enableRadio" value="option1"> 是
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="IsenableRadioOptions" id="unenableRadio" value="option2"> 否
                                    </label>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="button" id="submit" class="btn btn-default">提交</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



#parse("./head/footer.vm")