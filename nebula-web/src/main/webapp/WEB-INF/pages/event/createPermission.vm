<!doctype html>

    #parse("./head/header.vm")
    #parse("./head/sidebar.vm")
    #parse("./head/navbar.vm")

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div style="width: 100%">
                <div class="card">
                    <div class="content">
                        <form class="form-horizontal">
                            <div class="form-group" style="margin-left: 25%">
                                <label for="permissionName" class="col-sm-2 control-label">权限名称</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input type="text" class="form-control" placeholder="请输入权限英文名"/>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <label for="permissionCname" class="col-sm-2 control-label">权限中文名称</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input type="text" class="form-control" placeholder="请输入权限中文名"/>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <label for="permission" class="col-sm-2 control-label">权限</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input type="text" class="form-control" placeholder="请输入权限"/>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <label for="permissionDesc" class="col-sm-2 control-label">权限描述</label>
                                <div class="col-sm-10" style="width: 300px;">
##                                    <input type="text" class="form-control" placeholder="请输入权限描述"/>、
                                    <textarea style="resize: none;" class="form-control" placeholder="请输入权限描述"/></textarea>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <label for="permissionType" class="col-sm-2 control-label">类型</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <select class="form-control">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <label for="permissionUrl" class="col-sm-2 control-label">url</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input type="text" class="form-control" placeholder="请输入权限url"/>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <label for="permissionIsenable" class="col-sm-2 control-label">是否启用</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <label class="radio-inline">
                                        <input type="radio" name="IsenableRadioOptions" id="enableRadio" value="option1"> 是
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="IsenableRadioOptions" id="unenableRadio" value="option2"> 否
                                    </label>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-default">提交</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


#parse("./head/footer.vm")