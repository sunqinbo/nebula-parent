<link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.1-rc.1/css/select2.min.css" rel="stylesheet" />
<script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.1-rc.1/js/select2.min.js"></script>
<script src="public/js/createUser.js" type="text/javascript"></script>

<style>
    .select2{
        width:100% !important;
    }
</style>

<input id="isEdit" style="display: none;" value="$!{edit}"/>
<input id="empId" style="display: none;" value="$!{id}"/>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div style="width: 100%">
                <div class="card">
                    <div class="content">
                        <form class="form-horizontal" id="insertform">
                            <div class="form-group" style="margin-left: 25%">
                                <label for="username" class="col-sm-2 control-label">用户名</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input id="username" type="text" class="form-control" placeholder="请输入用户名"/>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 25%">
                                <label for="mobilePhone" class="col-sm-2 control-label">手机号码</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input id="mobilePhone" type="text" class="form-control" placeholder="请输入用户手机号码"/>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <label for="weixinAcc" class="col-sm-2 control-label">微信账号</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input id="weixinAcc" type="text" class="form-control" placeholder="请输入用户微信账号"/>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <label for="qqAcc" class="col-sm-2 control-label">qq账号</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input id="qqAcc" type="text" class="form-control" placeholder="请输入用户qq账号"/>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <label for="email" class="col-sm-2 control-label">邮箱</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input id="email" type="text" class="form-control" placeholder="请输入用户邮箱"/>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <label for="nickname" class="col-sm-2 control-label">昵称</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input id="nickname" type="text" class="form-control" placeholder="请输入用户昵称"/>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <label for="deptName" class="col-sm-2 control-label">部门名称</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input id="deptName" type="text" class="form-control" placeholder="请输入用户部门名称"/>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <label for="jobTitle" class="col-sm-2 control-label">职位</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input id="jobTitle" type="text" class="form-control" placeholder="请输入用户职位"/>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <label for="empId" class="col-sm-2 control-label">工号</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input id="empId" type="text" class="form-control" placeholder="请输入用户工号"/>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <label for="supervisorEmpId" class="col-sm-2 control-label">主管工号</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input id="supervisorEmpId" type="text" class="form-control" placeholder="请输入用户主管工号"/>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <label for="roleList" class="col-sm-2 control-label">添加角色</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <select id="roleList" class="js-example-tags form-control select2-hidden-accessible" multiple="" tabindex="-1" aria-hidden="true">
                                    </select>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <label for="isEnable" class="col-sm-2 control-label">是否启用</label>
                                <div id="isEnable" class="col-sm-10" style="width: 300px;">
                                    <label class="radio-inline">
                                        <input type="radio" name="isEnable" id="enableRadio" value=1> 是
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="isEnable" id="unenableRadio" value=0> 否
                                    </label>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <label for="password" class="col-sm-2 control-label">密码</label>
                                <div class="col-sm-10" style="width: 300px;">
                                    <input id="password" type="text" class="form-control" placeholder="请输入用户密码"/>
                                </div>
                            </div>

                            <div class="form-group" style="margin-left: 25%">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="button" id="submit" class="btn btn-default">提交</button>
                                    <button type="button" id="save" class="btn btn-default">保存修改</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


#parse("./head/footer.vm")